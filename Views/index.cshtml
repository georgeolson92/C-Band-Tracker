<h1>Band Tracker</h1>

<h2>Bands:</h2>
@if (@Model["bands"].Count != 0)
{
  <ul>
  @foreach(var band in @Model["bands"])
  {
    <li><a href='/bands/@band.GetId()'>@band.GetName()</a>
      <a href='/bands/@band.GetId()/edit'>
        <button type="button" class="btn btn-success">Edit</button>
      </a>
      <form class='float-form' action="/bands/delete/" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <input name="band-id" value=@band.GetId() type="hidden">
        <button type="submit" class="btn btn-danger">Remove</button>
      </form>
    </li>
  }
  </ul>
}
else
{
  <p>No bands.</p>
}

<form action="/bands/new" method="post">
  <label for="band-name">Name:</label>
  <input name="band-name" type="text">
  <button type="submit">Add new band</button>
</form>

<form action="/bands/delete-all" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <button type="submit">Delete all bands</button>
</form>

