<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link rel="stylesheet" href="../Content/css/styles.css" type="text/css">
    <title>Band Tracker</title>
  </head>
  <body>
    <div class="container">

      <h1>Band Tracker</h1>

      <h2>Bands:</h2>
      @if (@Model["bands"].Count != 0)
      {
        <ul>
        @foreach(var band in @Model["bands"])
        {
          <li><a href='/bands/@band.GetId()'>@band.GetName()</a><br>
            <a class='float-form' href='/bands/@band.GetId()/edit'>
              <button type="button" class="btn">Edit</button>
            </a>
            <form class='float-form' action="/bands/delete/" method="post">
              <input type="hidden" name="_method" value="DELETE">
              <input name="band-id" value=@band.GetId() type="hidden">
              <button type="submit" class="btn">Remove</button>
            </form>
          </li>
        }
        </ul>
      }
      else
      {
        <p>No bands.</p>
      }

      <form action="/bands/new" method="post">
        <label for="band-name">Name:</label>
        <input name="band-name" type="text">
        <button type="submit" class="btn btn-primary">Add new band</button>
      </form>

      <form action="/bands/delete-all" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-danger">Delete all bands</button>
      </form>

      <h2>Venues:</h2>
      @if (@Model["venues"].Count != 0)
      {
        <ul>
        @foreach(var venue in @Model["venues"])
        {
          <li><a href='/venues/@venue.GetId()'>@venue.GetName()</a><br>
            <a class='float-form' href='/venues/@venue.GetId()/edit'>
              <button type="button" class="btn">Edit</button>
            </a>
            <form class='float-form' action="/venues/delete/" method="post">
              <input type="hidden" name="_method" value="DELETE">
              <input name="venue-id" value=@venue.GetId() type="hidden">
              <button type="submit" class="btn">Remove</button>
            </form>
          </li>
        }
        </ul>
      }
      else
      {
        <p>No venues.</p>
      }


      <form action="/venues/new" method="post">
        <label for="venue-name">Name:</label>
        <input name="venue-name" type="text">
        <button type="submit" class="btn btn-primary">Add new venue</button>
      </form>

      <form action="/venues/delete-all" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-danger">Delete all venues</button>
      </form>

    </div>
  </body>
</html>
